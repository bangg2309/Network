
public class SplitAndJoinFile {

	private String makeDestFileName(String sourceFile, int order) {
		String ext;
		if (order < 10) {
			ext = ".00" + order;
		}
		else if (order < 100) {
			ext = ".0" + order;
		}
		else {
			ext = "." + order;
		}
		return sourceFile + order;
	}

	public void splitFile(String sourceFile, String destPath, int size) {

	}
}
