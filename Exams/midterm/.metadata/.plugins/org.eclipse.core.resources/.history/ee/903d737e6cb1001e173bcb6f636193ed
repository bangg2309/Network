package zip;

import java.io.DataOutput;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.RandomAccessFile;

public class Zip {
	public static boolean pack(String sFolder, String dFile) throws FileNotFoundException {
		File file = new File(sFolder);
		if (!file.isDirectory()) {
			return false;
		}
		File[] files = file.listFiles();
		RandomAccessFile raf = new RandomAccessFile(dFile, "rw");
		for (int i = 0; i < files.length; i++) {
			File fileItem = files[i];
			writeFile(fileItem, raf);
		}

		return true;
	}

	private static void writeFile(File file, DataOutput dos) {
		long nextEntry = 0;
		long fileSize = file.length();
		String fileName = file.getName();
		
	}
}
