package zip;

import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.RandomAccessFile;

public class Zip {
	public static boolean pack(String sFolder, String dFile) throws IOException {
		File folder = new File(sFolder);
		if (!folder.exists()) {
			return false;
		}
		File[] files = folder.listFiles();
		RandomAccessFile raf = new RandomAccessFile(dFile, "rw");
		boolean isLasted = false;
		for (int i = 0; i < files.length; i++) {
			File file = files[i];
			if (i == files.length - 1) {
				isLasted = true;
			}
			writeFile(file, raf, isLasted);

		}
		raf.close();
		return true;
	}

	private static void writeFile(File file, RandomAccessFile raf, boolean isLasted) {

	}
}
