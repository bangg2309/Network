package split;

import java.io.File;

public class SplitAndJoin {

	private static String makeFileName(String fileName, int order) {
		String str = "";
		if (order <10) {
			str = ".00" + order;
		}
		else if (order <100) {
			str = ".0" + order
		}
		else {
			str = "" + order;
		}
	}

	public static void splitFile(String sFile, int size) {
		File file = new File(sFile);
		int order = 0;
		String childFile = file.getAbsolutePath();
		do {
			order++;
			childFile = makeFileName(childFile, order);
			
		} while (true);
	}

