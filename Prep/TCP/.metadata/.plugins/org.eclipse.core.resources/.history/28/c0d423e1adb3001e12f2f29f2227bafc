package server;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.net.Socket;
import java.sql.SQLException;
import java.util.StringTokenizer;

public class ServerProcess extends Thread {
	private Socket socket;
	private BufferedReader netIn;
	private PrintWriter netOut;
	private Service service;

	public ServerProcess(Socket socket) throws IOException {
		this.socket = socket;
		this.netIn = new BufferedReader(new InputStreamReader(socket.getInputStream()));
		this.netOut = new PrintWriter(socket.getOutputStream(), true);
		this.service = new Service();
	}

	@Override
	public void run() {
		netOut.println("WELCOME TO MANAGE PRODUCT SYSTEM");

		while (true) {
			try {
				String command = netIn.readLine();
				if (command.equals("QUIT"))
					break;
				StringTokenizer st = new StringTokenizer(command, "\t");
				String commandName = st.nextToken();
				int countTokens = st.countTokens();
				boolean rs = false;

				switch (commandName) {
				case "ADD":
					if (countTokens != 4) {
						netOut.println("command ADD khong hop le");
						System.out.println("command ADD khong hop le");
					} else {					
							int idsp = Integer.parseInt(netIn.readLine());
							String name = netIn.readLine();
							int count = Integer.parseInt(netIn.readLine());
							double price = Double.parseDouble(netIn.readLine());
							Product product = new Product(idsp, name, count, price);
							try {
								service.addProduct(product);
							} catch (ClassNotFoundException | SQLException e) {
								netOut.println("ERROR");
							}
							netOut.println("OK");
							
					}
					break;
				case "REMOVE":

					break;
				case "EDIT":

					break;
				case "VIEW":

					break;

				default:
					netOut.println("command khong hop le");
					break;
				}
			} catch (IOException e) {
				e.printStackTrace();
			}

		}
		try {
			socket.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}
